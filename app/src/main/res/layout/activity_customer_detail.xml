<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hesi100.barber_shop.customer_detail"
    android:background="@color/gray"
    android:id="@+id/mDrawerLayout"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/background"
        android:orientation="vertical">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_detail">
        </include>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/white">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_weight="9"
                                    android:layout_gravity="center"
                                    android:gravity="right"
                                    android:textSize="20sp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/cust_name"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="نام مشتری :"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="20sp"
                                    android:layout_weight="0.8"
                                    />
                                <ImageView
                                    android:layout_weight="0.05"
                                    android:src="@drawable/user"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="9"
                                        android:gravity="right"
                                        android:layout_marginTop="3dp"
                                        android:textSize="15sp"
                                        android:layout_marginLeft="10dp"
                                        android:id="@+id/date"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"


                                        android:layout_marginRight="10dp"
                                        android:text="تاریخ :"
                                        android:layout_gravity="center_horizontal"
                                        android:textSize="20sp"
                                        android:layout_weight="0.8"
                                        />
                                    <ImageView
                                        android:layout_weight="0.05"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/calendar"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="9"
                                        android:gravity="right"
                                        android:layout_marginTop="3dp"
                                        android:textSize="15sp"
                                        android:layout_marginLeft="10dp"
                                        android:id="@+id/time"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"


                                        android:layout_marginRight="10dp"
                                        android:text="زمان :"
                                        android:layout_gravity="center_horizontal"
                                        android:textSize="20sp"
                                        android:layout_weight="0.8"
                                        />
                                    <ImageView
                                        android:layout_weight="0.05"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/clock"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:layout_margin="15dp"
                            android:gravity="right"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/modelmo"
                                android:layout_marginRight="20dp">

                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textSize="20sp"
                                android:text=" مدل مو : "/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"

                            android:background="@color/white">
                            <EditText
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp">

                            </EditText>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textSize="20sp"
                                android:text=" مدل مو مد نظر شما: "
                                android:background="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_margin="15dp"
                            android:gravity="right">
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/modelrish"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textSize="20sp"
                                android:text=" مدل ریش : "/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_margin="10dp"
                            android:gravity="right">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="شستشوی مو"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"/>
                            <CheckBox
                                android:clickable="false"
                                android:layout_marginRight="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/wash" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_margin="15dp"
                            android:gravity="right">
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/reserve"

                                android:layout_marginRight="10dp">

                            </TextView>
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textSize="20sp"
                                android:text=" وضعیت رزرو : "/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_margin="15dp"
                            android:gravity="right">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textSize="20sp"
                                android:text=" دقیقه "/>
                            <EditText
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/worktime"
                                android:gravity="center"
                                android:layout_marginRight="10dp">

                            </EditText>
                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textSize="20sp"
                                android:text=" مدت اصلاح : "/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_margin="15dp"
                            android:id="@+id/lay_reject"
                            android:visibility="gone"
                            android:gravity="right">
                            <EditText
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/cause"
                                android:layout_marginRight="10dp">
                            </EditText>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textSize="20sp"
                                android:text=" علت رد رزرو : "/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_margin="15dp"
                            android:gravity="right">
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/end_time"
                                android:layout_marginRight="10dp">
                            </TextView>
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textSize="20sp"
                                android:text=" ساعت اتمام : "/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="20dp">
                            <Button
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:id="@+id/button"
                                android:text=" رزرو"
                                android:background="@drawable/buttonreserve" />
                            <Button
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:id="@+id/buttonlaghv"
                                android:visibility="gone"
                                android:text="رد رزرو"
                                android:background="@drawable/button" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <fragment
        android:id="@+id/nav_drwr_fragment"
        android:name="com.example.hesi100.barber_shop.userfragment"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:layout="@layout/fragment_userfragment"
        tools:layout="@layout/fragment_userfragment" />
</android.support.v4.widget.DrawerLayout>

